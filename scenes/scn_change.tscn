script/source = "extends Node2D

@onready var current_level = $scn_level_1
@onready var animation_player: AnimationPlayer = $AnimationPlayer


var next_level


func _ready():
	current_level.connect(\"level_changed\", self.change_level)
	
	
func change_level(current_level_name):
	print(current_level_name)
	
	match current_level_name:
		\"level1\":
			next_level = load(\"res://scenes/scn_level_2.tscn\").instantiate()
		\"level2\":
			next_level = load(\"res://scenes/scn_level_3.tscn\").instantiate()
		_:
			return
	
	add_child(next_level)
	animation_player.play(\"scene_fade_in\")
	await animation_player.animation_finished
	get_tree().change_scene_to_packed(next_level)
	next_level.connect(\"level_changed\", self.change_level)


func _on_animation_player_animation_finished(anim_name):
	match anim_name:
		\"scene_fade_in\":
			current_level.cleanup()
			current_level = next_level
			current_level.z_index = 1
			next_level = null
			animation_player.play(\"scene_fade_out\")
"

